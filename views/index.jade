extends layout

block content
  section(class='bg active')
    h2(class="logo")
  section(class="grid")
    for image in images
      img(class="image" data-height=image.height data-width=image.width
        style="background: " + image.color + " url('" + image.url + "') no-repeat center center; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover;")
