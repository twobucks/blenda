doctype html
html
  head
    title Welcome to Blenda - Inspiring photography, with the power of Dropbox
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(rel='stylesheet', href='/vendor/normalize.css/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/vendor/animate.css/animate.css')
    link(href="//fonts.googleapis.com/css?family=Raleway" rel="stylesheet" type="text/css")
    link(href="//code.ionicframework.com/ionicons/1.5.2/css/ionicons.min.css" rel="stylesheet" type="text/css")

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/wow/dist/wow.min.js')
    script
      | new WOW().init();
      | $(function(){
      |  $('form').submit(function(e){
      |   var email = $(this).find('input').val()
      |   $.ajax({
      |     url: '/join',
      |     dataType: 'json',
      |     type: 'POST',
      |     data: {email: email}
      |   }).done(function(){
      |     $('div.action').html("<p>We'll reach you when the beta is launched</p>")
      |     $('footer.action').html("<p>Thanks for your support</p>")
      |   })
      |   e.preventDefault()
      |   return false
      |  })
      | })

