*
  margin: 0
  font-family:  'Raleway', sans-serif
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;

:focus
  outline: none

html, body
  height: 100%
	-webkit-font-smoothing: antialiased
a
  color: #00B7FF

.images
  margin: 0
  font-size: 0
  padding: 0
  white-space: nowrap
  overflow-x: auto
  li
    display: inline-block
    img
      opacity: 0.2
      margin: auto
      vertical-align: middle
      position: relative
      z-index: 0
      max-width: 100%
    &.active
      img
        opacity: 1
        height: 100%
        width: 100%
        z-index: 1
        position: relative

section
  padding-top: 5em

  p
    padding: 2em

  .visual
    max-width: 50%

  h2, p
    max-width: 30em


.header, .features
  color: #fff
  background-color: #000
  min-height: 45em
  position: relative
  border-bottom: 2px solid white

footer
  min-height: 10em
  color: #fff
  padding-top: 5em
  padding-bottom: 5em

.header, footer
  p, h1, h2, div
    margin: 0 auto
    text-align: center

  .buttons
    margin-top: 2em

  .action
    margin-top: 5em

  input
    margin-top: 2em
    background: transparent
    border: 1px solid white
    padding: 1em

    &[type="text"]
      text-align: initial
      border: none
      margin: 0 auto
      &:focus {
        outline-width: 0
      }

.features
  background-color: #0bb5ff
  text-align: left

footer
  background-color: #000

.feature
  max-width: 30rem
  margin: 0 auto
  padding-bottom: 5rem

  .title
    font-weight: bold
    margin-bottom: 0.5em
  .thumb
    float: left
    padding-right: 2em
    padding-bottom: 1em

    i
      display: block
      font-size: 5em

button
  color: white;
  background: #10bbf1;
  padding: 1em
  height: 56px
  border: 2px solid #10bbf1;
  -moz-transition: color 0.1s linear, background-color 0.1s linear, border-color 0.1s linear;
  -ms-transition: color 0.1s linear, background-color 0.1s linear, border-color 0.1s linear;
  -o-transition: color 0.1s linear, background-color 0.1s linear, border-color 0.1s linear;
  -webkit-transition: color 0.1s linear, background-color 0.1s linear, border-color 0.1s linear;
  transition: color 0.1s linear, background-color 0.1s linear, border-color 0.1s linear;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  background-color: rgba(0, 0, 0, 0);
  border-color: white;

  &:hover
    color: #222222;
    background-color: white;
    border-color: white;

  &:active
    color: #222222;
    background-color: #e5e5e5;
    border-color: #e5e5e5;


.left
  float: left

.right
  float: right

