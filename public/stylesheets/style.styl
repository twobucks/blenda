*
  margin: 0

html, body
  height: 100%
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

ul.images
  margin: 0
  font-size: 0
  padding: 0
  padding-bottom: 1000px
  white-space: nowrap
  overflow-x: auto
  li
    display: inline-block
    img
      opacity: 0.2
      margin: auto
      vertical-align: middle
      position: relative
      z-index: 0
      max-width: 100%
    &.active
      img
        opacity: 1
        height: 100%
        width: 100%
        z-index: 1
        position: relative

div.bg
  background: url(../stars2.jpg) no-repeat center center
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  min-height: 100%
  height: 100%
  max-height: 100%
  position: relative

  .logo
    text-align: center
    width: 100%
    background: url(../logo-white-4.svg) no-repeat center;
    background-size: 800px
    height: 800px

@media screen and (max-width: 1024px) /* Specific to this particular image */
  img.bg
    left: 50%
    margin-left: -512px   /* 50% */
