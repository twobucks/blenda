html, body
  height: 100%
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

ul.images
  margin: 0
  font-size: 0
  padding: 0
  padding-bottom: 1000px
  white-space: nowrap
  overflow-x: auto
  li
    display: inline-block
    img
      opacity: 0.2
      margin: auto
      vertical-align: middle
      position: relative
      z-index: 0
      max-width: 100%
    &.active
      img
        opacity: 1
        height: 100%
        width: 100%
        z-index: 1
        position: relative
